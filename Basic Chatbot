# Basic Chatbot using Python

def chatbot():
    print("ğŸ¤– Chatbot: Hello! I'm your friendly chatbot. Type 'bye' to exit.")
    
    while True:
        user_input = input("You: ").lower()
        
        if user_input in ["hi", "hello", "hey"]:
            print("ğŸ¤– Chatbot: Hello there! How can I help you?")
        
        elif "your name" in user_input:
            print("ğŸ¤– Chatbot: I'm a simple chatbot created using Python.")
        
        elif "how are you" in user_input:
            print("ğŸ¤– Chatbot: I'm just a program, but I'm doing great! What about you?")
        
        elif "time" in user_input:
            from datetime import datetime
            now = datetime.now()
            print(f"ğŸ¤– Chatbot: The current time is {now.strftime('%H:%M:%S')}")
        
        elif "date" in user_input:
            from datetime import date
            today = date.today()
            print(f"ğŸ¤– Chatbot: Today's date is {today.strftime('%B %d, %Y')}")
        
        elif "bye" in user_input:
            print("ğŸ¤– Chatbot: Goodbye! Have a great day ğŸ˜Š")
            break
        
        else:
            print("ğŸ¤– Chatbot: I'm not sure I understand that. Can you rephrase?")

# Run the chatbot
chatbot()

import random

# List of possible words
words = ["python", "hangman", "developer", "programming", "computer", "science", "artificial", "intelligence"]

# Choose a random word
word = random.choice(words)
guessed_letters = []
tries = 6  # Number of attempts allowed

print("🎮 Welcome to Hangman Game!")
print("Guess the word before you run out of tries.")
print("_ " * len(word))

while tries > 0:
    guess = input("\nEnter a letter: ").lower()

    if len(guess) != 1 or not guess.isalpha():
        print("❌ Please enter a single letter.")
        continue

    if guess in guessed_letters:
        print("⚠️ You already guessed that letter.")
        continue

    guessed_letters.append(guess)

    if guess in word:
        print("✅ Good job! The letter is in the word.")
    else:
        tries -= 1
        print(f"❌ Wrong guess! You have {tries} tries left.")

    # Display the current progress
    display_word = ""
    for letter in word:
        if letter in guessed_letters:
            display_word += letter + " "
        else:
            display_word += "_ "

    print("\nWord:", display_word.strip())

    # Check if the player has guessed all letters
    if "_" not in display_word:
        print("\n🎉 Congratulations! You guessed the word:", word)
        break
else:
    print("\n💀 Game Over! The word was:", word)
